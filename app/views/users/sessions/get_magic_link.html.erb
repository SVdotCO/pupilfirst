<% content_for(:head) do %>
  <title><%= "Sign In | #{current_school.name}" %></title>
<% end %>

<div class="bg-gray-100 sm:py-10">
  <div class="container mx-auto max-w-lg px-4 py-6 sm:py-8 bg-white rounded-lg shadow">
    <%= image_tag 'users/sessions/continue-with-email-icon.svg', class: 'mx-auto w-32 sm:w-42', alt: 'Sign-in with password' %>
    <div class="max-w-sm mx-auto text-lg sm:text-2xl font-bold text-center mt-4">
      Continue with email
    </div>
    <%= form_with(url: user_send_login_email_path, method: :post, class: 'pt-4 pb-5 md:px-9 items-center max-w-sm mx-auto', local: true) do |f| %>
      <div>
        <label
          class="inline-block tracking-wide text-gray-900 text-xs font-semibold" for="email">
          Email Address
        </label>
        <%= f.email_field :email, maxlength: 256, placeholder: 'john@example.com', required: true, class: 'appearance-none h-10 mt-1 block w-full text-gray-800 border border-gray-400 rounded py-2 px-4 text-sm bg-gray-100 hover:bg-gray-200 focus:outline-none focus:bg-white focus:border-primary-400', html: { tabindex: 1 } %>
      </div>
      <div
        class="flex justify-between items-center leading-snug mt-4 flex-col flex-col-reverse sm:flex-row">
        <div class="flex items-strecth text-gray-700 hover:text-gray-900">
          <%= f.check_box :shared_device, required: false, html: { tabindex: 3 } %>
          <label
            class="block pl-2 font-semibold cursor-pointer text-xs select-none whitespace-no-wrap"
            for="shared_device">
            Are you using a shared device?
          </label>
        </div>
      </div>
      <% if @show_checkbox_recaptcha %>
        <div class="mt-4">
          <%=
            recaptcha_tags(
              site_key: ENV['RECAPTCHA_V2_SITE_KEY'],
              nonce: content_security_policy_nonce,
            )
          %>
        </div>
      <% else %>
        <%=
          recaptcha_v3(
            action: 'user_magic_link_generation',
            site_key: ENV['RECAPTCHA_V3_SITE_KEY'],
            nonce: content_security_policy_nonce,
          )
        %>
      <% end %>
      <div class="mt-6">
        <%= f.submit "Email me a link to sign in", data: { disable: true }, class: "btn btn-primary btn-large text-center w-full", html: { tabindex: 4 } %>
      </div>
    <% end %>
    <div class="max-w-sm mx-auto md:px-9 flex flex-col justify-items-center">
      <a href="/users/password_login"
         class="w-full p-3 text-primary-500 leading-snug rounded-lg underline cursor-pointer text-sm text-center
      font-semibold hover:bg-gray-200 focus:bg-gray-200 focus:outline-none"
         tabindex=5>
        Sign in with Password
      </a>
      <a href="/users/sign_in"
         class="w-full p-3 text-primary-500 leading-snug rounded-lg underline cursor-pointer text-sm text-center
      font-semibold hover:bg-gray-200 focus:bg-gray-200 focus:outline-none"
         tabindex=5>
        Sign in with Google, Facebook, or Github
      </a>
    </div>
  </div>
</div>